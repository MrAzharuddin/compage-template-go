apiVersion: v1
kind: Service
metadata:
  namespace: {{.NodeName}}
  labels:
    app: {{.NodeName}}
  name: {{.NodeName}}
spec:
  ports:
    - protocol: TCP
      port: {{.RestServerPort}}
      targetPort: {{.RestServerPort}}
    - protocol: TCP
      port: {{.GrpcServerPort}}
      targetPort: {{.GrpcServerPort}}
  selector:
    app: {{.NodeName}}
  type: ClusterIP
